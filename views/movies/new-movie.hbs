<h1>Add movie</h1>
<form action="/create-movie" method="POST">
    
    <label>Title</label>
    <input type="text" name="title" />

    <label>Genre</label>
    <input type="text" name="genre" />

    <label>Plot</label>
    <input type="text" name="plot" />

    <label>Cast:</label>
    <select multiple name="cast" id="">
        <option value="">Choose cast</option>
        {{#each allCelebs}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Add movie</button>
</form>